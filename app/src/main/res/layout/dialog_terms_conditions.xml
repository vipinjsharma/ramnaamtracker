<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms and Conditions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_orange"/>

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@android:color/darker_gray"
                android:contentDescription="Close"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Acceptance of Terms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By accessing or using the Ram Naam Writing app, you agree to be bound by these Terms and Conditions. If you do not agree with any part of these terms, please do not use the application."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Use of the Application"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Ram Naam Writing app is designed for spiritual and personal use. You may use this application for personal, non-commercial purposes only. Any use of the app or its content for commercial purposes is strictly prohibited without prior written consent."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. User Accounts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When you create an account with us, you guarantee that the information you provide is accurate, complete, and current at all times. You are responsible for maintaining the confidentiality of your account and password."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Intellectual Property"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The app and its original content, features, and functionality are owned by Ram Naam Writing and are protected by international copyright, trademark, and other intellectual property laws."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Limitations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In no event shall Ram Naam Writing be liable for any damages arising out of the use or inability to use the application. The app is provided on an &quot;as is&quot; basis without warranties of any kind."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 6 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Governing Law"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These Terms shall be governed by and construed in accordance with the laws of India, without regard to its conflict of law provisions."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section 7 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Changes to Terms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We reserve the right to modify these terms at any time. We will notify you of any changes by posting the new Terms on the app. These changes are effective immediately after they are posted."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView> 