<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_beige</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.App.StatsCardView" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">@color/stats_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.App.Button.Small" parent="Widget.App.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Widget.App.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/progress_background</item>
        <item name="android:progressTint">@color/progress_fill</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="Widget.App.DrawingCanvas" parent="">
        <item name="android:background">@color/canvas_background_dark</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.App.WelcomeText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.App.SectionHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.App.SectionHeader.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.SectionHeader.Dark">
        <item name="android:textColor">@color/primary_orange</item>
    </style>

    <style name="TextAppearance.App.BenefitTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:subtitleTextColor">@color/white</item>
    </style>

    <!-- Button style -->
    <style name="Widget.RamLekhak.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.RamLekhak.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.RamLekhak.Subheading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.RamLekhak.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Toolbar styles -->
    <style name="TextAppearance.RamLekhak.Toolbar" parent="TextAppearance.MaterialComponents.Headline6" />
    
    <style name="TextAppearance.RamLekhak.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Navigation styles -->
    <style name="TextAppearance.RamLekhak.Navigation" parent="TextAppearance.MaterialComponents.Body2" />
    
    <style name="TextAppearance.RamLekhak.Navigation.Item">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.RamLekhak.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Drawing board style -->
    <style name="Widget.RamLekhak.DrawingBoard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/canvas_background_light</item>
    </style>

    <!-- Orange Switch Style -->
    <style name="OrangeSwitchTheme" parent="Theme.AppCompat.Light">
        <!-- Active track color (30% transparency) -->
        <item name="colorControlActivated">#E68656</item>
        <!-- Inactive track color (30% transparency) -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#42000000</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
